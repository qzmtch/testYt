<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Цвета Light -->
  <Color x:Key="PrimaryColor">#FF6750A4</Color>
  <Color x:Key="AccentColor">#FF2BB673</Color>
  <Color x:Key="BgColor">#FFF7F7FB</Color>
  <Color x:Key="PanelColor">#FFFFFFFF</Color>
  <Color x:Key="TextColor">#FF101114</Color>
  <Color x:Key="SubTextColor">#7F101114</Color>
  <Color x:Key="BorderColor">#FFE5E7EB</Color>

  <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
  <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
  <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BgColor}" />
  <SolidColorBrush x:Key="PanelBrush" Color="{StaticResource PanelColor}" />
  <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
  <SolidColorBrush x:Key="SubTextBrush" Color="{StaticResource SubTextColor}" />
  <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />
</ResourceDictionary>
