<Window x:Class="YtDlpGui.Wpf.Dialogs.CrashDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ошибка приложения" Width="820" Height="520"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="ErrorText"
                 FontFamily="Consolas"
                 FontSize="12"
                 IsReadOnly="True"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 TextWrapping="NoWrap" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Копировать" Padding="14,6" Margin="0,0,8,0" Click="Copy_Click"/>
            <Button Content="Сохранить..." Padding="14,6" Margin="0,0,8,0" Click="Save_Click"/>
            <Button Content="Закрыть" Padding="14,6" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
